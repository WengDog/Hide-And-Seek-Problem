            <Button Content="INPUT YOUR QUERY" Width="240" Canvas.Left="424" Canvas.Top="277" Height="44" Background="#FF37A5DF" Click="Button_Click_2" FontSize="18" FontFamily="Snap ITC"/>
            <Button Content="ANSWER" Width="232" Canvas.Left="286" Canvas.Top="347" Height="64" FontFamily="Snap ITC" FontSize="36" Background="#FF2A9FCA" Click="Button_Click_3"/>
            <Label Content="Input Your Map!" FontSize="28" FontFamily="Snap ITC" Foreground="#FFF3F7F0" Height="46" Canvas.Left="259" Canvas.Top="113" Width="282"/>
            <Label Content="HIDE AND SEEK" FontSize="48" FontFamily="Snap ITC" Margin="163,10,158,363.6" Foreground="#FFF3F7F0"/>
            <Label Content="Choose Query from?" FontSize="28" FontFamily="Snap ITC" Margin="237,225,227,178.6" Foreground="#FFF3F7F0"/>
        </Canvas>
    </Grid>
</Page>

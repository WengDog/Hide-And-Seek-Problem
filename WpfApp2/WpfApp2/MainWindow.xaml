<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Hide And Seek" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="background/themeTron.jpg"/>
    </Window.Background>
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <Label Content="HIDE AND SEEK" Canvas.Left="154" Canvas.Top="32" Height="74" Width="519" FontSize="72" FontFamily="STCaiyun" Foreground="#FFF6E9E9"/>
            <Label Content="THE GAME" Canvas.Left="279" Canvas.Top="106" Height="55" Width="243" FontSize="48" FontFamily="STCaiyun" Foreground="#FFF6E9E9"/>
            <Button Content="START" Width="232" Canvas.Left="290" Canvas.Top="218" Height="81" Background="{x:Null}" Click="Button_Click" FontSize="72" FontFamily="STCaiyun" Foreground="#FFFFFDFD" BorderBrush="{x:Null}"/>
        </Canvas>
    </Grid>
</Window>

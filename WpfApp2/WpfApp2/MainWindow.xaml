        <Canvas HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF37A8CB" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Label Content="HIDE AND SEEK" Canvas.Left="154" Canvas.Top="32" Height="69" Width="490" FontSize="72" FontFamily="STCaiyun" Foreground="#FFF6E9E9"/>
            <Label Content="THE GAME" Canvas.Left="279" Canvas.Top="106" Height="49" Width="221" FontSize="48" FontFamily="STCaiyun" Foreground="#FFF6E9E9"/>
            <Button Content="START" Width="196" Canvas.Left="290" Canvas.Top="218" Height="65" Background="{x:Null}" Click="Button_Click" FontSize="72" FontFamily="STCaiyun" Foreground="#FFFFFDFD" BorderBrush="{x:Null}"/>
        </Canvas>

    </Grid>
</Window>
